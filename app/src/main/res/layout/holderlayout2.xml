<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/holder_layout_two"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/hl_two_food_image"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"></ImageView>

                <TextView
                    android:id="@+id/hl_two_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_green_light"
                    android:text=" 2% off  "
                    android:textColor="@android:color/white" />

                <RatingBar
                    android:id="@+id/hl_two_food_rating"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hl_two_offer"
                    android:layout_alignParentStart="true"
                    android:numStars="5"
                    android:progressTint="@color/orangeRed"
                    android:rating="4" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/hl_two_foodname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/hl_two_fooddesc"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="17dp"
                    android:text="Food Name"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/hl_two_fooddesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/hl_two_price"
                    android:layout_alignStart="@+id/hl_two_foodname"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toLeftOf="@+id/hl_two_order_now"
                    android:maxLines="1"
                    android:text="This food is really testy and delicious"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/hl_two_order_now"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:layout_above="@+id/hl_two_price"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="13dp"
                    android:background="@color/orangeRed"
                    android:text="@string/orderfood"
                    android:textColor="@android:color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/hl_two_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/hl_two_fooddesc"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:text="Rs. 150"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="13sp" />


            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>