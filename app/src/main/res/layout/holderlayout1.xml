<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/holder_layout_one"
    android:layout_marginBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            >

            <ImageView
                android:id="@+id/hl_one_image"
                android:layout_width="115dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                />

            <TextView
                android:textAllCaps="true"
                android:id="@+id/hl_one_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:text="FoodName"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hl_one_price"
                android:layout_width="wrap_content"
                android:maxWidth="80dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/hl_one_name"
                android:layout_below="@+id/hl_one_name"
                android:text="Price"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/hl_one_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:layout_toLeftOf="@+id/hl_one_image"
                android:layout_alignStart="@+id/hl_one_name"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/hl_one_price"
                android:maxLines="1"
                android:text="Description goes here!!" />

            <TextView
                android:id="@+id/hl_one_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/hl_one_price"
                android:layout_toRightOf="@+id/hl_one_price"
                android:layout_marginLeft="5dp"
                android:text="Offer:"
                android:textSize="13sp" />

            <RatingBar
                android:id="@+id/hl_one_ratingbar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/hl_one_image"
                android:layout_alignTop="@+id/hl_one_image"
                android:progressTint="@android:color/holo_orange_dark"
                android:rating="4" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>
