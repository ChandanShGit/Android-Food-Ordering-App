<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/holder_layout_three"
    android:layout_marginBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:elevation="4dp"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            >

            <ImageView
                android:id="@+id/hl_three_food_image"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/hl_three_name"
                android:layout_width="wrap_content"
                android:maxWidth="150dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/hl_three_food_image"
                android:layout_marginStart="10dp"
                android:text="@string/foodname"
                android:layout_marginTop="5dp"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hl_three_price"
                android:layout_width="wrap_content"
                android:maxWidth="80dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/hl_three_name"
                android:layout_below="@+id/hl_three_name"
                android:text="Price:"
                android:layout_marginTop="2dp"
                android:textColor="@android:color/holo_green_light"
                android:textSize="13sp" />

            <RatingBar
                android:id="@+id/hl_three_ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/hl_three_name"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:progressTint="@color/orangeRed"
                android:rating="4" />

            <TextView
                android:id="@+id/hl_three_desc"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_toStartOf="@+id/fif_iv"
                android:layout_marginEnd="8dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hl_three_price"
                android:layout_alignStart="@+id/hl_three_price"
                android:layout_marginTop="2dp"
                android:textSize="13sp"
                android:text="desc" />

            <TextView
                android:id="@+id/hl_three_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="80dp"
                android:layout_below="@+id/hl_three_name"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/hl_three_price"
                android:layout_alignTop="@+id/hl_three_price"
                android:text="offer" />

            <ImageView
                android:id="@+id/fif_iv"
                android:visibility="invisible"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@+id/hl_three_price"
               android:layout_marginEnd="20dp"
                android:layout_marginTop="-15dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/fav_filled_icon_24dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
